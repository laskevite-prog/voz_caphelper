<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:id="@+id/tvLoginTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Entrar no Voz - CapHelper"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvLoginSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Para fins de protótipo, o login é simplificado.\nSe já houver um perfil salvo, você será levada para a Home."
        android:textSize="14sp"
        android:layout_marginTop="8dp" />

    <!-- Campos fictícios de login (opcional) -->
    <EditText
        android:id="@+id/etLoginEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="E-mail (opcional no MVP)"
        android:layout_marginTop="24dp" />

    <EditText
        android:id="@+id/etLoginSenha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Senha (opcional no MVP)"
        android:inputType="textPassword"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Entrar"
        android:layout_marginTop="24dp" />

</LinearLayout>
