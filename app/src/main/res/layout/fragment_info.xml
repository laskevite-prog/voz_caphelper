<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Título principal -->
        <TextView
            android:id="@+id/tvInfoTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/info_title"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Introdução / contexto do app -->
        <TextView
            android:id="@+id/tvInfoIntro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/info_intro"
            android:textSize="14sp"
            android:layout_marginTop="8dp" />

        <!-- Título: tipos de violência -->
        <TextView
            android:id="@+id/tvInfoTiposTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/info_section_tipos_title"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp" />

        <!-- Texto: tipos de violência -->
        <TextView
            android:id="@+id/tvInfoTiposText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/info_section_tipos_text"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <!-- Título: canais oficiais -->
        <TextView
            android:id="@+id/tvInfoCanaisTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/info_section_canais_title"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp" />

        <!-- Texto: canais oficiais -->
        <TextView
            android:id="@+id/tvInfoCanaisText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/info_section_canais_text"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <!-- Título: cuidados de segurança -->
        <TextView
            android:id="@+id/tvInfoSegurancaTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/info_section_seguranca_title"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp" />

        <!-- Texto: cuidados de segurança -->
        <TextView
            android:id="@+id/tvInfoSegurancaText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/info_section_seguranca_text"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

    </LinearLayout>
</ScrollView>
