<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Título -->
        <TextView
            android:id="@+id/tvDenunciaTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/denuncia_title"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Subtítulo explicando o contexto -->
        <TextView
            android:id="@+id/tvDenunciaSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/denuncia_subtitle"
            android:textSize="14sp"
            android:layout_marginTop="8dp" />

        <!-- Nome do agressor -->
        <EditText
            android:id="@+id/etAgressorNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/denuncia_hint_agressor_nome"
            android:layout_marginTop="16dp" />

        <!-- Relação com o agressor -->
        <EditText
            android:id="@+id/etRelacao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/denuncia_hint_relacao"
            android:layout_marginTop="8dp" />

        <!-- Tipo de violência -->
        <EditText
            android:id="@+id/etTipoViolencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/denuncia_hint_tipo_violencia"
            android:layout_marginTop="8dp" />

        <!-- Local da ocorrência -->
        <EditText
            android:id="@+id/etLocal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/denuncia_hint_local"
            android:layout_marginTop="8dp" />

        <!-- Descrição detalhada -->
        <EditText
            android:id="@+id/etDescricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/denuncia_hint_descricao"
            android:layout_marginTop="8dp"
            android:inputType="textMultiLine"
            android:minLines="3" />

        <!-- Botão de envio -->
        <Button
            android:id="@+id/btnEnviarDenuncia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/denuncia_btn_enviar"
            android:layout_marginTop="24dp" />

    </LinearLayout>
</ScrollView>
