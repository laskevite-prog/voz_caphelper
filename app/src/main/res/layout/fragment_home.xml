<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Título e textos principais -->
        <TextView
            android:id="@+id/tvHomeTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/home_title_caphelper"
            android:textSize="26sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvHomeSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/home_subtitle_ods5"
            android:textSize="14sp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tvHomeDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/home_description"
            android:textSize="14sp"
            android:layout_marginTop="16dp" />

        <!-- Espaço antes dos botões -->
        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <!-- BOTÕES / MENU PRINCIPAL -->

        <Button
            android:id="@+id/btnHomeInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/home_btn_info"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/btnHomeDenuncia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/home_btn_denuncia"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/btnHomeRegistros"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/home_btn_registros"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/btnHomeIndicadores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/home_btn_indicadores"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/btnHomeBoOnline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/home_btn_bo_online"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/btnHomeConfig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/home_btn_config"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/btnMeuPerfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Meu perfil / primeiros passos"
            android:layout_margin="16dp" />


    </LinearLayout>

</ScrollView>
